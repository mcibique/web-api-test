<?xml version="1.0" encoding="utf-8"?>

<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xdt:Transform="RemoveAttributes(throwExceptions)">
    <targets async="true" xdt:Transform="SetAttributes">
      <default-wrapper xsi:type="BufferingWrapper" bufferSize="500" slidingTimeout="true" flushTimeout="60000" xdt:Transform="Insert" />
      <default-target-parameters xsi:type="File" archiveFileName="${logsDir}/${shortdate}.${logger}.${###}.log" archiveAboveSize="10485760" archiveNumbering="Sequence" concurrentWrites="false" maxArchiveFiles="-1" xdt:Transform="SetAttributes" xdt:Locator="Match(xsi:type)" />
    </targets>
  </nlog>
  <system.web>
    <compilation xdt:Transform="RemoveAttributes(debug)" />
  </system.web>
</configuration>